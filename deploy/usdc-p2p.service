[Unit]
Description=USDC-KRW P2P Trading App
After=network.target

[Service]
User=ubuntu
Group=ubuntu
WorkingDirectory=/home/ubuntu/usdc-p2p
EnvironmentFile=/home/ubuntu/usdc-p2p/.env
ExecStart=/home/ubuntu/usdc-p2p/venv/bin/uvicorn main:app --host 127.0.0.1 --port 3000
Restart=always
RestartSec=5

# Single worker only â€” WebSocket state is in-memory
# Do NOT use --workers > 1

[Install]
WantedBy=multi-user.target
